<?xml version="1.0" encoding="utf-8"?>
<project xmlns:sonar="antlib:org.sonar.ant" name="sonar">

  <target name="sonar" depends="build-test">
    <taskdef uri="antlib:org.sonar.ant" resource="org/sonar/ant/antlib.xml">
      <classpath path="../build/sonar-ant-task-1.3.jar"/>
    </taskdef>

    <property name="sonar.host.url" value="http://33.33.33.10:9000/"/>
    <property name="sonar.jdbc.url"
              value="jdbc:mysql://33.33.33.10:3306/sonar?useUnicode=true&amp;characterEncoding=utf8" />
    <property name="sonar.jdbc.driverClassName" value="com.mysql.jdbc.Driver" />
    <property name="sonar.jdbc.username" value="sonar" />
    <property name="sonar.jdbc.password" value="sonar" />

    <property name="sonar.binaries" value="${main.jar}-classes,${test.jar}-classes" />
    <property name="sonar.surefire.reportsPath" value="${test.reports}" />
    <property name="sonar.sources" value="${source.main.java}" />
    <property name="sonar.tests" value="${source.test.java}" />
    <property name="sonar.core.codeCoveragePlugin" value="jacoco" />
    <property name="sonar.jacoco.antTargets" value="test" />
    <property name="sonar.projectKey" value="org.neo4j.bigdata:client-api" />

    <sonar:sonar key="org.neo4j.bigdata" version="1.0-SNAPSHOT">
    </sonar:sonar>
  </target>

</project>
